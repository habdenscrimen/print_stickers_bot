{
  "name": "create_print_layout",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check:format": "prettier --check \"./!(node_modules|build|dist)/**/*.{ts,tsx,js,jsx}\"",
    "check:typescript": "tsc --noEmit -p .",
    "check:eslint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "check": "npm run check:format && npm run check:typescript && npm run check:eslint",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "start": "ts-node ./src/index.ts",
    "build": "rm -rf ./functions && tsc --build && cp ./src/magickconvert ./functions",
    "firebase:logs": "firebase functions:log",
    "firebase:serve": "npm run build && firebase emulators:start --only functions",
    "firebase:deploy": "npm run build && cp package.json functions/package.json && firebase deploy --only functions"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "firebase-admin": "^10.1.0",
    "firebase-functions": "^3.20.1",
    "gm": "^1.23.1",
    "raw-body": "^2.5.1",
    "sharp": "^0.30.4",
    "svg-sprite": "^1.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/gm": "^1.18.11",
    "@types/node": "^17.0.31",
    "@types/sharp": "^0.30.2",
    "@types/svg-sprite": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
